{
	"BlockingLevel": "operation",
	"Timeout": 540000,
	"CheckingInterval": 3000,
	"Cleanup": false,
	"Operations": [
		{
                        "Predicate": {
                                "Resource": "kube-system/pod/etcd-k8s-master",
                                "Command": "pwd",
                                "Expect": "!contains:root"
                        },
			"Deployments": {
				"Actions": [
					{
						"Act": "CREATE",
						"Spec": {
							"ImagePullPolicy": "IfNotPresent",
							"Image": "k8s.gcr.io/pause:3.1",
							"NumReplicas": 2,
                                                        "Namespace": "test-simple"
						}
					},
                                        {
                                                "Act": "DELETE",
                                                "Spec": {
                                                        "Namespace": "test-simple"
                                                }
                                        }
				],
				"SleepTimes": [
					10000,
					3000
				],
				"Count": 2
			},
                        "RepeatTimes": 0
		}
	]
}
